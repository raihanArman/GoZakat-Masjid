<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.penyaluran.DetailZakatFragment">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="16dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_muzakki"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/bg_horizontal"
                android:elevation="10dp" />
            <TextView
                android:id="@+id/tv_muzakki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="20sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_alamat_muzakki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_jenis_zakat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zakat Profesi"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nominal"
            android:id="@+id/tv_nominal"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jatuh tempo"
            android:id="@+id/tv_jatuh_tempo"
            android:textSize="15sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pilih_mustahiq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Mustahiq"
        android:background="@color/colorPrimaryDark"
        android:padding="15dp"
        android:textSize="20sp"
        android:textColor="@color/yellow"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>