<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.datazakat.DataKelolaFragment"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/lv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelola Zakat"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito_bold"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/background_jenis_zakat">
                </FrameLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/zakat_profesi"
                    android:scaleType="centerCrop"
                    android:alpha="0.1"/>
                <LinearLayout
                    android:id="@+id/lv_profesi"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/salary"
                        android:tint="@android:color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:text="Zakat Profesi"
                            android:textColor="#FFEB3B"
                            android:fontFamily="@font/nunito_bold"/>
                        <TextView
                            android:id="@+id/tv_nominal_profesi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Rp. 15.000.00"
                            android:textColor="#FFffff"
                            android:fontFamily="@font/nunito"/>
                        <TextView
                            android:id="@+id/tv_muzakki_profesi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="8 Muzakki"
                            android:textColor="#FFffff"
                            android:fontFamily="@font/nunito"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/background_jenis_zakat">
                </FrameLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/zakat_mal"
                    android:scaleType="centerCrop"
                    android:alpha="0.1"/>
                <LinearLayout
                    android:id="@+id/lv_mal"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/casino_gold"
                        android:tint="@android:color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:text="Zakat Mal"
                            android:textColor="#FFEB3B"
                            android:fontFamily="@font/nunito_bold"/>
                        <TextView
                            android:id="@+id/tv_nominal_mal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Rp. 15.000.00"
                            android:textColor="#FFffff"
                            android:fontFamily="@font/nunito"/>
                        <TextView
                            android:id="@+id/tv_muzakki_mal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="8 Muzakki"
                            android:textColor="#FFffff"
                            android:fontFamily="@font/nunito"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/background_jenis_zakat">
                </FrameLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/infaq"
                    android:scaleType="centerCrop"
                    android:alpha="0.1"/>
                <LinearLayout
                    android:id="@+id/lv_infaq"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/money"
                        android:tint="@android:color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:text="Infaq"
                            android:textColor="#FFEB3B"
                            android:fontFamily="@font/nunito_bold"/>
                        <TextView
                            android:id="@+id/tv_nominal_infaq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Rp. 15.000.00"
                            android:textColor="#FFffff"
                            android:fontFamily="@font/nunito"/>
                        <TextView
                            android:id="@+id/tv_muzakki_infaq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="8 Muzakki"
                            android:textColor="#FFffff"
                            android:fontFamily="@font/nunito"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>